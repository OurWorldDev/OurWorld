<script type="text/javascript" src="<%= process.env.staticurl %>/js/jquery.min.js"></script>
<script type="text/javascript" src="<%= process.env.staticurl %>/layui/layui.all.js"></script>
<script>

	var ads_img = $("#top_ads");
	var ads_arr = JSON.parse(decodeURIComponent(`<%=ads%>`));

	var curAdsIndex = -1;
	if (ads_arr.length) {
		function setTopBG() {
			curAdsIndex++;
			if (curAdsIndex >= ads_arr.length) { curAdsIndex = 0; }
			ads_img.attr('src', `/ads/${ads_arr[curAdsIndex].id}`);
		}
		setTopBG();
		setInterval(setTopBG, 5000)
		function goADS() {
			if (curAdsIndex != -1 && (ads_arr[curAdsIndex].content != '无')) {
				window.open(ads_arr[curAdsIndex].content);
			}
		}
	} else {
	}
</script>